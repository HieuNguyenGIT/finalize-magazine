<a href="/user">Home</a>

<h1>Article</h1>

<a href="/user/newarticle">New Article</a>

<h1>Search Your Article</h1>
<form action="/user/article" method="GET">
    <div>
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.name %>">
    </div>
    <button type="submit">Search</button>
</form>

<div>
    <form action="/user/article" method="POST">
        <h2>Your Article</h2>
        <select name="status">
            <% if (!status || status === 'all') { %>
                <option selected value="all">All</option>
            <% } else { %>
                <option value="all">All</option>
            <% } %>
            
            <% if (status && status === 'pending') { %>
                <option selected value="pending">Pending</option>
            <% } else { %>
                <option value="pending">Pending</option>
            <% } %>

            <% if (status && status === 'accepted') { %>
                <option selected value="accepted">Accepted</option>
            <% } else { %>
                <option value="accepted">Accepted</option>
            <% } %>

            <% if (status && status === 'rejected') { %>
                <option selected value="rejected">Rejected</option>
            <% } else { %>
                <option value="rejected">Rejected</option>
            <% } %>
        </select>
        <button type="submit">Submit</button>
    </form>
</div>

<div>
    <% articles.forEach(article=>{ %>
        <table>
            <tr>
                <td>Cover</td>
                <td>Name</td>
                <td>Status</td>
                <td>Link download</td>
            </tr>
            <tr>
                <td><img height="150" width="100" src="<%= article.coverImagePath %>"></td>
                <td><a href="/user/article/<%= article._id %>">
                        <%= article.name %>
                    </a>
                </td>
                <td><%= article.status %> </td>
                <td>
                    <form action="/user/article/download/<%= article._id %>" method="GET">
                        <input type="submit" value="Download">
                    </form>
                </td>
            </tr>
        </table>
        <% }) %>
</div>
